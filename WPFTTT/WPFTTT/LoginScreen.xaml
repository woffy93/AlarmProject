<Window x:Class="WPFTTT.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTTT"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="20" Background="LightGreen">
            <Label Content="Username"></Label>
            <TextBox Name="txtUser" ></TextBox>
            <Label Content="Password"></Label>
            <PasswordBox Name="txtPwd"></PasswordBox>
            <Button Name="BtnLogin" Content="Login" Click="BtnLogin_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
